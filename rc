	PS1="%{$fg[green]%}"'$(tmux display-message -p "#W")'"%{$fg[white]%}:"$PS1
	PS1="%{$fg[blue]%}"'$(tmux display-message -p "#I")'"%{$fg[white]%}."$PS1
elif [ $TERM = "xterm" ]; then
	if [ !`tmux attach` ]; then
		TERM=xterm-256color tmux
	fi
fi


